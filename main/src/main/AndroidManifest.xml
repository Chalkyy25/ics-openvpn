<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 🌐 Core Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- 🧩 Foreground Service (Android 14+ special use for VPN) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />

    <!-- 🔔 Notifications (runtime-requested on API 33+) -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />

    <!-- 📺 Optional TV Support -->
    <uses-feature android:name="android.software.leanback" android:required="false" />

    <application
        android:name="de.blinkt.openvpn.core.ICSOpenVPNApplication"
        android:allowBackup="true"
        android:appCategory="productivity"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AIOVPN.Dark"
        android:usesCleartextTraffic="false"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:ignore="UnusedAttribute">

        <!-- 💠 Brand metadata -->
        <meta-data android:name="AIOVPN_APP_NAME" android:value="AIO VPN" />
        <meta-data android:name="AIOVPN_API_BASE_URL" android:value="https://aiovpn.co.uk/api" />

        <!-- Managed config (optional) -->
        <meta-data
            android:name="android.content.APP_RESTRICTIONS"
            android:resource="@xml/app_restrictions" />

        <!-- 🎬 TV banner support -->

        <!-- 🏠 Launcher (Login first) -->
        <activity
            android:name="de.blinkt.openvpn.ui.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AIOVPN.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!-- Optional TV launcher -->
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 🧭 Main activity (post-login) -->
        <activity
            android:name="de.blinkt.openvpn.ui.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.AIOVPN.Dark" />

        <!-- 🌍 Server picker -->
        <activity
            android:name="de.blinkt.openvpn.ui.ServerPickerActivity"
            android:exported="false"
            android:label="Choose Server"
            android:theme="@style/Theme.AIOVPN.Dark" />

        <!-- 🚀 LaunchVPN shim -->
        <activity
            android:name="de.blinkt.openvpn.LaunchVPN"
            android:exported="true"
            android:autoRemoveFromRecents="true"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:taskAffinity="de.blinkt.openvpn.LaunchVPN"
            android:theme="@style/Theme.AIOVPN.Dark.Dialog" />

        <!-- 🧠 Core VPN service (specialUse subtype=vpn) -->
        <service
            android:name="de.blinkt.openvpn.core.OpenVPNService"
            android:exported="false"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:foregroundServiceType="specialUse"
            android:process=":openvpn">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="vpn" />
        </service>

        <!-- 🔒 Public API service (internal only) -->
        <service
            android:name="de.blinkt.openvpn.api.ExternalOpenVPNService"
            android:exported="false"
            android:process=":openvpn">
            <intent-filter>
                <action android:name="de.blinkt.openvpn.api.IOpenVPNAPIService" />
            </intent-filter>
        </service>

        <!-- 📡 Status updater -->
        <service
            android:name="de.blinkt.openvpn.core.OpenVPNStatusService"
            android:exported="false"
            android:process=":openvpn" />

        <!-- 🔁 Boot & update receiver -->
        <receiver
            android:name="de.blinkt.openvpn.OnBootReceiver"
            android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- 🩺 Keep-alive job -->
        <service
            android:name="de.blinkt.openvpn.core.keepVPNAlive"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:process=":openvpn"
            android:exported="false" />

        <!-- 🪟 Remote actions -->
        <activity
            android:name="de.blinkt.openvpn.api.RemoteAction"
            android:exported="false"
            android:launchMode="singleInstance"
            android:autoRemoveFromRecents="true"
            android:excludeFromRecents="true"
            android:taskAffinity="de.blinkt.openvpn.LaunchVPN"
            android:noHistory="true"
            android:theme="@style/Theme.AIOVPN.Dark.Dialog" />

        <activity android:name="de.blinkt.openvpn.api.GrantPermissionsActivity"
            android:exported="false" />

        <activity android:name="de.blinkt.openvpn.api.ConfirmDialog"
            android:exported="false" />

        <!-- ⚡ Internal shortcuts (keep non-exported for safety) -->
        <activity-alias
            android:name="de.blinkt.openvpn.api.ConnectVPN"
            android:exported="false"
            android:targetActivity="de.blinkt.openvpn.api.RemoteAction" />
        <activity-alias
            android:name="de.blinkt.openvpn.api.DisconnectVPN"
            android:exported="false"
            android:targetActivity="de.blinkt.openvpn.api.RemoteAction" />
        <activity-alias
            android:name="de.blinkt.openvpn.api.PauseVPN"
            android:exported="false"
            android:targetActivity="de.blinkt.openvpn.api.RemoteAction" />
        <activity-alias
            android:name="de.blinkt.openvpn.api.ResumeVPN"
            android:exported="false"
            android:targetActivity="de.blinkt.openvpn.api.RemoteAction" />

    </application>
</manifest>