<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected (e.g., currently chosen server) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/aio_card_bg_dark"/>
            <corners android:radius="18dp"/>
            <stroke android:width="2dp" android:color="@color/aio_primary"/>
        </shape>
    </item>

    <!-- Focused (TV/remote focus) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/aio_card_bg_dark"/>
            <corners android:radius="18dp"/>
            <stroke android:width="2dp" android:color="@color/aio_glow_purple"/>
        </shape>
    </item>

    <!-- Pressed (touch/click down) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/aio_card_bg_dark"/>
            <corners android:radius="18dp"/>
            <stroke android:width="2dp" android:color="@color/aio_secondary"/>
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/aio_card_bg_dark"/>
            <corners android:radius="18dp"/>
            <stroke android:width="1dp" android:color="@color/aio_border"/>
        </shape>
    </item>

</selector>