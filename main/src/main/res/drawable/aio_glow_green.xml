<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:type="radial"
                android:centerColor="#6639FF14"
                android:endColor="#0039FF14"
                android:gradientRadius="160dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/aio_surface"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/aio_border"/>
        </shape>
    </item>
</layer-list>