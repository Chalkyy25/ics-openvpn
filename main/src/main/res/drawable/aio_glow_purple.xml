<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <size android:width="0dp" android:height="0dp"/>
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
            <gradient
                android:type="radial"
                android:centerColor="#66A020F0"
            android:endColor="#00A020F0"
            android:gradientRadius="160dp"/>
        </shape>
    </item>

    <!-- Core card -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/aio_surface"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="@color/aio_border"/>
        </shape>
    </item>
</layer-list>