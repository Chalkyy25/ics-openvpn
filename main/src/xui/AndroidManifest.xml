<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application
        tools:replace="android:label, android:icon, android:roundIcon">

        <!-- Make LoginActivity the ONLY launcher -->
        <activity
            android:name="de.blinkt.openvpn.ui.LoginActivity"
            android:exported="true"
            tools:node="merge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Keep MainActivity but remove launcher intents -->
        <activity
            android:name=".activities.MainActivity"
            tools:node="merge">
            <intent-filter tools:node="remove">
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
                <category android:name="android.intent.category.BROWSABLE"/>
            </intent-filter>
        </activity>

        <!-- Avoid duplicate alias/exported conflicts -->
        <activity-alias
            android:name=".activities.ConfigConverterFile"
            tools:replace="android:exported android:targetActivity" />

    </application>
</manifest>
