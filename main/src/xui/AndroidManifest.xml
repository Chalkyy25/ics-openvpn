<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <!-- Only override/strip; do NOT set package here -->
    <application tools:replace="android:label">

        <!-- Make LoginActivity the launcher for xui -->
        <activity
            android:name="de.blinkt.openvpn.ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Keep MainActivity but strip all launcher/browsable filters -->
        <activity android:name="de.blinkt.openvpn.activities.MainActivity">
            <intent-filter tools:node="remove">
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Remove the activity-alias entries from base -->
        <activity-alias android:name=".api.ConnectVPN"    tools:node="remove"/>
        <activity-alias android:name=".api.DisconnectVPN" tools:node="remove"/>
        <activity-alias android:name=".api.PauseVPN"      tools:node="remove"/>
        <activity-alias android:name=".api.ResumeVPN"     tools:node="remove"/>

    </application>
</manifest>
