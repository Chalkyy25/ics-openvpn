<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">

    <application tools:replace="android:label">

        <!-- Make LoginActivity the ONLY launcher for the xui flavor -->
        <activity
            android:name="de.blinkt.openvpn.ui.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Remove the launcher intent(s) that the UI flavor gives to MainActivity -->
        <!-- (We keep the activity, just strip its MAIN/LAUNCHER filters.) -->
        <activity android:name=".activities.MainActivity">
            <intent-filter tools:node="remove">
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LEANBACK_LAUNCHER"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
